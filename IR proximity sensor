int IR_PIN= 0; // Sensor is connected to the analog A0
int VOLTS = 0; //Sensor result
float DISTANCE = 0; //Calculated value

void setup()
{
Serial.begin(9600); // Setup communication with computer to present results serial monitor
}

void loop()
{
// read the value from the ir sensor

VOLTS = analogRead(IR_PIN); //Get sensor value
  
DISTANCE = (6787.0 / (VOLTS - 3.0)) - 4.0; //Calculate distance in cm

Serial.print(DISTANCE); //Send distance to computer
Serial.println(" cm"); //Add cm to result
delay(300); //Wait
}

